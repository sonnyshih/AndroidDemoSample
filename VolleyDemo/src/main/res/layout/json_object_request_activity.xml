<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.volleydemo.MainActivity" >

    <Button
        android:id="@+id/jsonObjectRequest_getButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Get method" />

    <Button
        android:id="@+id/jsonObjectRequest_postButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/jsonObjectRequest_getButton"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/jsonObjectRequest_getButton"
        android:text="Post Method" />

    <TextView
        android:id="@+id/jsonObjectRequest_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="72dp"
        android:text="@string/hello_world" />

</RelativeLayout>