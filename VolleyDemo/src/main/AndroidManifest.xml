<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.volleydemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.volleydemo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleRequest.ShowSimpleRequest"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize" />
        <activity
            android:name=".SingletonPattern.UseSingletonPattern"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize" />
        <activity
            android:name=".ImageLoader.ImageLoaderActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize" />

        <activity
            android:name=".JsonOjbectRequest.JsonObjectRequestActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize" />

        <activity
            android:name=".CustomerGsonRequest.CustomerGsonRequestActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize" />

    </application>

</manifest>