    <style name="com.sonny.customer.AppTheme.FullScreen">
        <item name="android:windowBackground">@color/background_gray</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="com.sonny.customer.AppTheme.Transparent">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <!-- For Toolbar Demo Start -->
    <!--
        Reference
        1. http://blog.mosil.biz/2014/10/android-toolbar/
        2. Add the "AppTheme.Toolbar" style in values/styles.xml and values-v21/styles.xml
    -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <!-- Setting the icon color -->
        <item name="android:textColorSecondary">@color/white</item>
        <!--<item name="android:textViewStyle">@style/MyTextViewStyle</item>-->
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#F00</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SampelCodeDemo.Toolbar.TitleText.Bold.White16" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme.Base"></style>

    <!-- For Toolbar End -->

    <!--BottomSheet-->
    <style name="BottomSheet" />

    <style name="BottomSheet.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:textColor">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/color_text_black</item>
        <item name="android:textColorSecondary">#8A000000</item>
        <item name="android:textColorHint">#42000000</item>
    </style>

    <style name="BottomSheet.Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_exit</item>
    </style>
