<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/downstreamMessaging_registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Register" />

    <Button
        android:id="@+id/downstreamMessaging_unregisterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="UnRegister" />

    <Button
        android:id="@+id/downstreamMessaging_pushMessageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Simulate Server Push Message" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/downstreamMessaging_messageTypeRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:id="@+id/downstreamMessaging_singleMessageRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single User" />

            <RadioButton
                android:id="@+id/downstreamMessaging_multiUserRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi-Users" />
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:id="@+id/downstreamMessaging_sendGCMMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="send JSON Message" />

    <TextView
        android:id="@+id/downstreamMessaging_responseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Get Response Message" />
</LinearLayout>