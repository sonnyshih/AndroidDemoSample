<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anmationDemo_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/animationDemo_rotationAnimationDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotation Animatio nDemo"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/animationDemo_textViewAnimationDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView Animation Demo"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/animationDemo_linearLayoutAnimationDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear lyaout Animation Demo"
        android:textAllCaps="false" />


</LinearLayout>
