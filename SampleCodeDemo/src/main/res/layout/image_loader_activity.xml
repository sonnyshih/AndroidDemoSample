<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <ImageView
        android:id="@+id/imageLoader_requestIageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bin_empty_256" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/imageLoader_NetworkImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/imageLoader_requestIageView"
        android:scaleType="center"
        android:src="@drawable/bin_empty_256" />

    <ImageView
        android:id="@+id/imageLoader_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/imageLoader_NetworkImageView"
        android:layout_marginTop="5dp"
        android:src="@drawable/bin_empty_256" />

</LinearLayout>
