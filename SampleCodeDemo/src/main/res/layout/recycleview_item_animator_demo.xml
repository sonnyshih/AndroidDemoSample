<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">


    <Button
        android:id="@+id/recycleViewItemAnimatorDemo_defaultAnimatorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Animator"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/recycleViewItemAnimatorDemo_customerAnimatorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Animator"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/recycleViewItemAnimatorDemo_listViewIncludeRecycleViewAnimatorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView Include RecycleView Animator"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/recycleViewItemAnimatorDemo_recycleViewIncludeRecycleViewAnimatorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecycleView Include RecycleView Animator"
        android:textAllCaps="false" />


</LinearLayout>
