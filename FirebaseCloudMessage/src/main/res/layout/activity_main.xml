<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/main_getTokenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Token"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/main_pushSingleDeviceNotificationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Push Single Device Notification"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/main_pushMultiDeviceNotificationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Push Multi Devices Notification"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/main_pushSingleDeviceDataButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Push Single Devices Data"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/main_pushMultiDeviceDataButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Push Multi Devices Data"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/main_sendMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/main__spaceView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f44336" />

        <TextView
            android:id="@+id/main_responseMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
