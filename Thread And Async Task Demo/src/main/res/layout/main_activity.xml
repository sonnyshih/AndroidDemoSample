<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ThreadAndAsyncTaskDemo.MainActivity" >

    <TextView
        android:id="@+id/main_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/main_asyncTaskDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_textView"
        android:layout_below="@+id/main_textView"
        android:layout_marginTop="15dp"
        android:text="AsyncTask Demo" />

    <Button
        android:id="@+id/main_threadDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_asyncTaskDemoButton"
        android:layout_below="@+id/main_asyncTaskDemoButton"
        android:layout_marginTop="15dp"
        android:text="Thread Demo" />

    <TextView
        android:id="@+id/async_task_demo_translateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_threadDemoButton"
        android:layout_marginTop="10dp"
        android:text="Translate JSON into Entity" />

    <LinearLayout
        android:id="@+id/async_task_demo_translateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/async_task_demo_translateTextView"
        android:orientation="vertical" >

        <Button
            android:id="@+id/async_task_demo_translateDemo1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Translate Demo 1" />

        <Button
            android:id="@+id/async_task_demo_translateDemo2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Translate Demo 2" />
    </LinearLayout>

    <Button
        android:id="@+id/async_task_demo_base64Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/async_task_demo_translateLayout"
        android:layout_marginTop="17dp"
        android:text="Base 64 Encode" />

</RelativeLayout>