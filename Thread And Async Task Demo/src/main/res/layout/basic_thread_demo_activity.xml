<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ThreadAndAsyncTaskDemo.MainActivity" >

    <Button
        android:id="@+id/basic_thread_demo_showDemo1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Show Demo 1" />

    <TextView
        android:id="@+id/basic_thread_demo_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/basic_thread_demo_showDemo1Button"
        android:layout_below="@+id/basic_thread_demo_showDemo1Button"
        android:layout_marginTop="16dp"
        android:text="Use Handle.Post" />

    <Button
        android:id="@+id/basic_thread_demo_showDemo2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basic_thread_demo_textView"
        android:text="Show Demo 2" />

    <TextView
        android:id="@+id/basic_thread_demo_demo3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basic_thread_demo_showDemo2Button"
        android:layout_marginTop="16dp"
        android:text="Use Message" />

    <LinearLayout
        android:id="@+id/basic_thread_demo_demo2Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basic_thread_demo_demo3TextView" >

        <Button
            android:id="@+id/basic_thread_demo_startThread1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Thread 1" />

        <Button
            android:id="@+id/basic_thread_demo_startThread2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Thread 2" />
    </LinearLayout>

</RelativeLayout>