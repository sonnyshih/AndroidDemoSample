<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ThreadAndAsyncTaskDemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AsyncTaskDemo.AsyncTaskDemoActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"/>

        <activity
            android:name=".ThreadDemo.ThreadDemoIndexActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"/>

        <activity
            android:name=".ThreadDemo.BasicThreadDemo"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"/>

        <activity
            android:name=".ThreadDemo.NewFixedThreadPoolDemoActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"/>

        <activity
            android:name=".ThreadDemo.ThreadPoolExecutorDemoActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"/>

    </application>

</manifest>
