<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sonny.example.firebaserealtimedatabase">

    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SignInActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:label="Sign In"
            android:launchMode="singleTask" />

        <activity
            android:name=".PostNewMessageActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:label="Post New Message"
            android:launchMode="singleTask" />

        <activity
            android:name=".ListMessageActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:label="List Message"
            android:launchMode="singleTask" />

        <activity
            android:name=".MessageDetailActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:label="Message Detail"
            android:launchMode="singleTask" />

    </application>

</manifest>