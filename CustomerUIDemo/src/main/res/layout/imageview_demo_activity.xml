<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/imageViewDemo_customerImageViewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Customer ImageView"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.example.CustomerUIDemo.ui.CircleImageView
        android:id="@+id/imageViewDemo_circleImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageViewDemo_customerImageViewTextView"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/imageViewDemo_clipImageViewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewDemo_circleImageView"
        android:layout_marginTop="10dp"
        android:text="Clip ImageView"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageViewDemo_clipImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/imageViewDemo_clipImageViewTextView"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>