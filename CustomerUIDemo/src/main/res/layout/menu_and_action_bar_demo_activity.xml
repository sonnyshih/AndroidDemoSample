<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/menuAndActionBarDemo_ActionBarDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Action Bar Demo" />

    <Button
        android:id="@+id/menuAndActionBarDemo_customerActionBarDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/menuAndActionBarDemo_ActionBarDemoButton"
        android:text="Customer Action Bar Demo" />

    
    <Button
        android:id="@+id/menuAndActionBarDemo_floatContextMenuDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/menuAndActionBarDemo_customerActionBarDemoButton"
        android:text="Float Context Menu Demo" />

    <Button
        android:id="@+id/menuAndActionBarDemo_individualViewActionModeDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/menuAndActionBarDemo_floatContextMenuDemoButton"
        android:text="Individual view Action Mode Demo" />

    <Button
        android:id="@+id/menuAndActionBarDemo_listviewActionModeDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/menuAndActionBarDemo_individualViewActionModeDemoButton"
        android:text="Listview Action Mode Demo" />

    <Button
        android:id="@+id/menuAndActionBarDemo_customListviewActionModeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/menuAndActionBarDemo_listviewActionModeDemoButton"
        android:text="Custom Listview Action Mode Demo" />
    
</RelativeLayout>